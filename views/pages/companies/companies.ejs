<h1>Lista firm:</h1>


<% companies.forEach(company=> { %>
    <div class="card bg-light mb-3">
        <div class="card-body">
            <p class="h3 mb-4">
                <%= company.name %>
            </p>

            <!-- Dodajemy buttony z url z parametrem -->
            <a href="/firmy/<%= company.slug %>" class="btn btn-primary">Zobacz</a>
            <a href="/admin/firmy/<%= company.slug %>/edytuj" class="btn btn-warning">Edytuj</a>
            <!-- dodajemy listenera onclick, który sprawdza czy na pewno chcemy usunąć firmę-->
            <a href="/admin/firmy/<%= company.slug %>/usun" 
                onclick="return confirm('Czy jesteś pewny?')" 
                class="btn btn-danger">Usuń</a>
        </div>
    </div>
    <%})%>